<p><%= link_to 'Orders', '#', id: 'order_list' %></p>

<div id="orders">
  <div class="sales-channel-filter">
    <span>Filter by <button class="dropbtn">Sales Channel</button></span>
    <div class="dropdown-content">
      <% Order.sales_channel_keys.each do |sales_channel| %>
        <a href="#"><%= sales_channel %></a>
      <% end %>
    </div>
  </div>
  <table>
    <tr>
      <th>Order Number</th>
      <th>Customer</th>
      <th>Date Created</th>
    </tr>
    <% @orders.each do |order| %>
      <tr>
      <td><%= order.id %></td>
      <td><%= order.customer.name %></td>
      <td><%= order.created_at %></td>
      </tr>
    <% end %>
  </table>
</div>
